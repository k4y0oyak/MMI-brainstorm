<div class="container d-flex flex-direction-column justify-content-center">
  <div class="col-4 mt-4">
    <h2 class="text-center my-4">Log in</h2>
  
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  
      <div class="form-signin form-inputs my-4">
        <%= f.input :email, required: true, autofocus: true, input_html: { autocomplete: "email" } %>
        <%= f.input :password, required: false, input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>
      <div class="text-white form-actions btn btn-primary text-center">
        <%= f.button :submit, "Log in" %>
      </div>
      <% end %>
  </div>
</div>

<%= render "devise/shared/links" %>
